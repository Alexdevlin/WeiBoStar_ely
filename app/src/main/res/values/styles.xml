         <item name="layout_marginRight">10dp</item>
         <item name="gravity">center_vertical</item>
         <item name="drawablePadding">10dp</item>
     </style>-->

    <style name="ArrowDialog" parent="android:style/Theme.Dialog">
        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否阴影变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <!-- 图片详情页，长按的动画 -->
    <style name="image_option_pop_window_anim_style">
        <item name="android:windowEnterAnimation">@anim/home_image_detail_list_pop_window_in</item>
        <item name="android:windowExitAnimation">@anim/home_image_detail_list_pop_window_out</item>
    </style>


</resources>
