<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/toolbar_home_top"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:background="@color/white">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/title_back_imageview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:src="@drawable/selector_toptitle_left"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_home_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/home_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="尼古拉斯丶赵四"
            android:padding="2dp"
            android:textColor="@color/middleblack"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/title_arraw_imageview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:focusable="true"
            android:clickable="true"
            android:src="@drawable/selector_toptitle_center_arraw"/>
    </LinearLayout>



    <ImageView
        android:id="@+id/title_right_imageview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:src="@drawable/selector_toptitle_right"/>


</RelativeLayout>